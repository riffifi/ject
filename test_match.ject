# Test match expressions

let test_value = 42

let result = match test_value
    0 -> "zero"
    1 -> "one"
    42 -> "the answer!"
    x -> "something else: " + x
end

print result

# Test with different types
let color = "red"

let color_code = match color
    "red" -> "#FF0000"
    "green" -> "#00FF00"
    "blue" -> "#0000FF"
    _ -> "#000000"
end

print color_code

# Test with boolean
let flag = true

let message = match flag
    true -> "Flag is set!"
    false -> "Flag is not set"
end

print message
