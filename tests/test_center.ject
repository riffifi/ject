# Test center function logic manually

let str = "this"
let length = 20
let char = "*"

print "Testing center function logic:"
print "Original string: " + str
print "Target length: " + length
print "Padding char: " + char

let padding_needed = length - len(str)
print "Padding needed: " + padding_needed

if padding_needed <= 0
    print "Result: " + str
else
    let left_padding = floor(padding_needed / 2)
    let right_padding = padding_needed - left_padding
    print "Left padding: " + left_padding
    print "Right padding: " + right_padding
    
    # Create left padding
    let left_pad = ""
    for i in range(left_padding) do
        left_pad = left_pad + char
    end
    
    # Create right padding  
    let right_pad = ""
    for i in range(right_padding) do
        right_pad = right_pad + char
    end
    
    let result = left_pad + str + right_pad
    print "Result: " + result
    print "Length: " + len(result)
end

print "Done!"
