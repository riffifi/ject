# Comprehensive match test

# Test different types
let numbers = [0, 1, 42, 99]
let strings = ["hello", "world", "test"]
let bools = [true, false]

# Test with numbers
for num in numbers do
    let msg = match num
        0 -> "zero!"
        1 -> "one!"
        x -> "number: " + x
    end
    print msg
end

# Test with strings
for str in strings do
    let result = match str
        "hello" -> "greeting"
        "world" -> "planet"
        _ -> "unknown"
    end
    print result
end

# Test with booleans
for flag in bools do
    let status = match flag
        true -> "on"
        false -> "off"
    end
    print status
end
