# Test both elseif keyword and traditional else if patterns

let score = 85

if score >= 90
    print "Grade: A"
elseif score >= 80
    print "Grade: B"  
elseif score >= 70
    print "Grade: C"
elseif score >= 60
    print "Grade: D"
else
    print "Grade: F"
end

print "---"

# Test traditional else if (for backward compatibility)
let temperature = 25

if temperature < 0
    print "Freezing"
else if temperature < 20
    print "Cold"
else if temperature < 30
    print "Warm"
else
    print "Hot"
end

print "---"

# Test nested conditions with both styles
let time = 14

if time < 12
    print "Morning"
elseif time < 18
    if time < 15
        print "Early afternoon"  
    else
        print "Late afternoon"
    end
else
    print "Evening"
end
